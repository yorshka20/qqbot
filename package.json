{
  "name": "qqbot",
  "version": "1.0.0",
  "description": "QQ Bot with multi-protocol support (Milky, OneBot11, Satori)",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "LOG_LEVEL=debug bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun --minify",
    "start": "bun dist/index.js",
    "debug": "bun run src/cli/debug.ts",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "bun test"
  },
  "keywords": [
    "qqbot",
    "qq",
    "bot",
    "milky",
    "onebot",
    "satori"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "bun@1.0.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@saltify/milky-types": "^1.1.0",
    "adm-zip": "^0.5.16",
    "better-sqlite3": "^12.6.0",
    "jsonc-parser": "^3.3.1",
    "mongodb": "^7.0.0",
    "openai": "^6.16.0",
    "puppeteer": "^21.0.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/adm-zip": "^0.5.7",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "latest",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  }
}
